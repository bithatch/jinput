root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.js]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.html]
indent_style = tab
trim_trailing_whitespace = true

[*.java]
indent_style = tab
tab_width = 4
trim_trailing_whitespace = true

[*.{cmd,bat,ps1}]
end_of_line = crlf
